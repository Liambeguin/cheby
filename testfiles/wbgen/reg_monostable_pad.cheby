memory-map:
  name: pt
  description: register monostable with padding
  comment: A simple passthrough register
  bus: wb-32-be
  x-wbgen:
    hdl_entity: mono
  children:
  - reg:
      name: R1
      description: Register 1
      comment: Register 1 has two fields
      width: 32
      access: wo
      address: 0x00000000
      children:
      - field:
          name: reset
          range: 0
          description: Reset bit
          comment: 1 to reset
          x-wbgen:
            type: MONOSTABLE
