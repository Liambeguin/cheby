memory-map:
  name: pt
  bus: wb-32-be
  description: register passthrough
  comment: |
    A simple passthrough register
  x-wbgen:
    hdl_entity: pthr
  children:
  - reg:
      name: R1
      address: 0x00000000
      width: 32
      access: wo
      description: Register 1
      comment: |
        Register 1 has two fields
      children:
      - field:
          name: reset
          range: 0
          description: Reset bit
          comment: |
            1 to reset
          x-wbgen:
            type: PASS_THROUGH
            access_bus: WRITE_ONLY
            access_dev: READ_ONLY
            clock: clk1
            size: 1
          x-hdl:
            type: wire
      x-hdl:
        write-strobe: True
