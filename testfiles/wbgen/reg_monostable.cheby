memory-map:
  name: pt
  bus: wb-32-be
  description: register monostable
  comment: A simple passthrough register
  x-wbgen:
    hdl_entity: mono
  children:
  - reg:
      name: R1
      address: 0x00000000
      width: 32
      access: wo
      description: Register 1
      comment: Register 1 has two fields
      children:
      - field:
          name: reset
          range: 0
          description: Reset bit
          comment: 1 to reset
          x-wbgen:
            type: MONOSTABLE
            access_bus: WRITE_ONLY
            access_dev: READ_ONLY
