memory-map:
  name: ver_reg
  description: version test 1
  comment: A simple register
  bus: wb-32-be
  x-wbgen:
    hdl_entity: ver_reg
    version: 2
  children:
  - reg:
      name: VER
      description: Version register
      width: 32
      access: rw
      address: 0x00000000
      children:
      - field:
          name: ID
          range: 31-0
          description: Version identifier
          preset: 2
          x-wbgen:
            type: SLV
            access_bus: READ_WRITE
            access_dev: READ_ONLY
  - reg:
      name: R1
      description: Register 1
      comment: Register 1 has one fields
      width: 32
      access: rw
      address: 0x00000004
      children:
      - field:
          name: reset
          range: 0
          description: Reset bit
          comment: 1 to reset
          x-wbgen:
            type: BIT
            access_bus: READ_WRITE
            access_dev: READ_ONLY
