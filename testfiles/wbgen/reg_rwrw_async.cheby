memory-map:
  name: reg1
  description: register ack test
  comment: A simple register
  bus: wb-32-be
  x-wbgen:
    hdl_entity: reg1
  children:
  - reg:
      name: R1
      description: Register 1
      comment: Register 1 has two fields
      width: 32
      access: rw
      address: 0x00000000
      children:
      - field:
          name: reset
          range: 1-0
          description: Reset bit
          comment: 1 to reset
          x-wbgen:
            type: SLV
            access_bus: READ_WRITE
            access_dev: READ_WRITE
            clock: clk1
            load: LOAD_EXT
      x-hdl:
        write-strobe: True
