memory-map:
  name: pt
  description: register passthrough
  comment: A simple passthrough register
  bus: wb-32-be
  x-wbgen:
    hdl_entity: pt
  children:
  - reg:
      name: R1
      description: Register 1
      comment: Register 1 has two fields
      width: 32
      access: wo
      address: 0x00000000
      children:
      - field:
          name: reset
          range: 0
          description: Reset bit
          comment: 1 to reset
          x-wbgen:
            type: PASS_THROUGH
            access_bus: WRITE_ONLY
            access_dev: READ_ONLY
            size: 1
          x-hdl:
            type: wire
      x-hdl:
        write-strobe: True
  - reg:
      name: R2
      description: Register 2
      comment: Register 2
      width: 32
      access: wo
      address: 0x00000004
      children:
      - field:
          name: reset
          range: 0
          description: Reset bit
          comment: 1 to reset
          x-wbgen:
            type: PASS_THROUGH
            access_bus: WRITE_ONLY
            access_dev: READ_ONLY
            size: 1
          x-hdl:
            type: wire
      x-hdl:
        write-strobe: True
