memory-map:
  name: ram1
  description: Ram with padding
  bus: wb-32-be
  x-wbgen:
    hdl_entity: rampad
  children:
  - reg:
      name: R1
      description: Register 1
      comment: Register 1 has two fields
      width: 32
      access: rw
      address: 0x0
      children:
      - field:
          name: enable
          description: Enable
          comment: 1 to enable device
          range: 0
          x-wbgen:
            access_bus: READ_WRITE
            access_dev: READ_ONLY
            type: BIT
  - memory:
      name: ch1
      address: 0x2000
      memsize: 4096
      description: Channel 1
      x-wbgen:
        kind: ram
        access_dev: READ_WRITE
      children:
      - reg:
          name: data
          width: 16
          access: rw
